<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxdesign.fragment.volumeroom.VolumeEightFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:textColor="@color/cor595757"
                            android:textSize="28px" />

                        <EditText
                            android:id="@+id/et_new_kehuxingming"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="请输入"
                            android:textColor="@color/cor595757"
                            android:textColorHint="@color/line"
                            android:textSize="28px" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="78px"
                        android:layout_marginTop="20px"
                        android:background="@color/colorWhite"
                        android:padding="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="职务"
                            android:textColor="@color/cor595757"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/tv_zhiwu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="请选择"
                            android:textColor="@color/cor595757"
                            android:textSize="28px" />

                    </RelativeLayout>

                </LinearLayout>

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_age"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_attention"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="78px"
                        android:layout_marginTop="20px"
                        android:background="@color/colorWhite"
                        android:padding="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="背景"
                            android:textColor="@color/cor595757"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/tv_beijing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="请选择"
                            android:textColor="@color/cor595757"
                            android:textSize="28px" />

                    </RelativeLayout>

                </LinearLayout>

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_sex"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="78px"
                        android:layout_marginTop="20px"
                        android:background="@color/colorWhite"
                        android:padding="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="角色"
                            android:textColor="@color/cor595757"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/tv_juese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="请选择"
                            android:textColor="@color/cor595757"
                            android:textSize="28px" />

                    </RelativeLayout>

                </LinearLayout>

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_juece"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_chnegyi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_contract"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_identity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <com.rxjy.rxdesign.custom.TextGridview
                    android:id="@+id/tgv_character"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>
