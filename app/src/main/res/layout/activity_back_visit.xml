<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxdesign.activity.home.BackVisitActivity">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="50px"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/gv_talk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:paddingBottom="10px"
                    android:paddingLeft="10px"
                    android:paddingRight="20px"
                    android:paddingTop="20px">

                    <RadioButton
                        android:id="@+id/rb_face_to_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="center"
                        android:text="外出面谈"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="28px" />

                    <RadioButton
                        android:id="@+id/rb_communication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="通讯"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="28px" />

                    <RadioButton
                        android:id="@+id/rb_un_talk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="未沟通"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="28px" />

                    <RadioButton
                        android:id="@+id/rb_un_companytalk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="公司面谈"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="28px" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="290px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:layout_marginTop="20px"
                            android:src="@drawable/ic_hfprogress" />

                        <View
                            android:layout_width="3px"
                            android:layout_height="fill_parent"
                            android:background="@color/line_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27px"
                            android:text="项目进展"
                            android:textColor="@color/text_black"
                            android:textSize="30px" />

                        <EditText
                            android:id="@+id/ed_progress"
                            android:layout_width="fill_parent"
                            android:layout_height="190px"
                            android:layout_marginTop="15px"
                            android:background="@drawable/edtxt_bggrey"
                            android:ems="10"
                            android:gravity="left"
                            android:hint="为此单你今天做了什么..."
                            android:inputType="textPersonName"
                            android:padding="20px"
                            android:textColor="@color/text_black"
                            android:textSize="28px" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="220px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:src="@drawable/ic_hfproblem" />

                        <View
                            android:layout_width="3px"
                            android:layout_height="fill_parent"
                            android:background="@color/line_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7px"
                            android:text="遇到问题"
                            android:textColor="@color/text_black"
                            android:textSize="30px" />

                        <EditText
                            android:id="@+id/ed_problem"
                            android:layout_width="fill_parent"
                            android:layout_height="140px"
                            android:layout_marginTop="15px"
                            android:background="@drawable/edtxt_bggrey"
                            android:ems="10"
                            android:gravity="left|top"
                            android:hint="此单当前存在的问题..."
                            android:inputType="textPersonName"
                            android:padding="20px"
                            android:textColor="@color/text_black"
                            android:textSize="28px" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="260px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:src="@drawable/ic_hfnextplan" />

                        <View
                            android:layout_width="3px"
                            android:layout_height="fill_parent"
                            android:background="@color/line_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7px"
                            android:text="下步计划"
                            android:textColor="@color/text_black"
                            android:textSize="30px" />

                        <EditText
                            android:id="@+id/ed_nextplan"
                            android:layout_width="fill_parent"
                            android:layout_height="180px"
                            android:layout_marginTop="15px"
                            android:background="@drawable/edtxt_bggrey"
                            android:ems="10"
                            android:gravity="left|top"
                            android:hint="为什么想这么做，以及时间节点..."
                            android:inputType="textPersonName"
                            android:padding="20px"
                            android:textColor="@color/text_black"
                            android:textSize="28px" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="220px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:src="@drawable/ic_hfhelp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7px"
                            android:text="部门协助"
                            android:textColor="@color/text_black"
                            android:textSize="30px" />

                        <EditText
                            android:id="@+id/ed_help"
                            android:layout_width="fill_parent"
                            android:layout_height="140px"
                            android:layout_marginTop="15px"
                            android:background="@drawable/edtxt_bggrey"
                            android:ems="10"
                            android:gravity="left|top"
                            android:hint="输入需要协助的人、事、时间..."
                            android:inputType="textPersonName"
                            android:padding="20px"
                            android:textColor="@color/text_black"
                            android:textSize="28px" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="80px"
                    android:layout_margin="40px"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="提 交"
                    android:textColor="@color/colorWhite"
                    android:textSize="30px" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
