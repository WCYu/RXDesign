<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2"
    android:orientation="vertical"
    tools:context="com.rxjy.rxdesign.fragment.MoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <include layout="@layout/layout_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_rxtitleicon" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="402px">

                <ImageView
                    android:id="@+id/iv_morebanner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_moretopbanner" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="瑞祥服务"
                    android:textSize="32px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_hongbao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fuwu1"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/more_redenvelopes" />

                        <TextView
                            android:id="@+id/tv_fuwu1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="红包"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_huitouke"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fuwu2"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/more_returnguest" />

                        <TextView
                            android:id="@+id/tv_fuwu2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"

                            android:text="回头客"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_tuijian"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fuwu3"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/more_joinin" />

                        <TextView
                            android:id="@+id/tv_fuwu3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="加盟推荐"
                            android:textSize="25px" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="#f7f5f5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_touzi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="设计师服务"
                    android:textSize="32px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_jiameng"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="56px"
                                android:layout_height="56px"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="15px"
                                android:layout_marginTop="40px"
                                android:src="@mipmap/jiameng" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="130px"
                                android:layout_marginTop="20px"
                                android:background="@drawable/shape_tip"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/colorWhite"
                                android:textSize="16px"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="加盟"
                            android:textSize="25px" />


                    </LinearLayout>


                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_dianpu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="56px"
                                android:layout_height="56px"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="15px"
                                android:layout_marginTop="40px"
                                android:src="@mipmap/dianpu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/shape_tip"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/colorWhite"
                                android:textSize="16px"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="店铺"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_anli"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:background="@mipmap/anli" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="案例"
                            android:textSize="25px" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_zaishi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:background="@mipmap/gongcheng" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="施工"
                            android:textSize="25px" />
                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_caiwu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:background="@mipmap/caiwu" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="财务"
                            android:textSize="25px" />
                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_paidan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:background="@mipmap/paidan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="项目"
                            android:textSize="25px" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_bowen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:background="@mipmap/bowen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="交流"
                            android:textSize="25px" />
                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_fuwu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="56px"
                                android:layout_height="56px"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="15px"
                                android:layout_marginTop="40px"
                                android:src="@mipmap/fuwu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="130px"
                                android:layout_marginTop="20px"
                                android:background="@drawable/shape_tip"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/colorWhite"
                                android:textSize="16px"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="评价"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_xiaxian"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text=""
                            android:textSize="25px" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
