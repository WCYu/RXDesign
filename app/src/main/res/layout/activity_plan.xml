<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxdesign.activity.home.PlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/kaigongjiaodi"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="24px"
                android:layout_marginTop="70px">

                <ImageView
                    android:layout_width="29px"
                    android:layout_height="28px"
                    android:src="@mipmap/xiangmumingcheng" />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12px"
                    android:text="中国社会出版社"
                    android:textColor="@color/colorWhite"
                    android:textSize="28px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="24px"
                android:layout_marginTop="20px">

                <ImageView
                    android:layout_width="29px"
                    android:layout_height="28px"
                    android:src="@mipmap/dizhi" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12px"
                    android:text="北京市朝阳区六里屯19号院"
                    android:textColor="@color/colorWhite"
                    android:textSize="24px" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9px"
                    android:layout_height="29px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/biaotiqiandise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="初稿"
                    android:textColor="@color/text_black"
                    android:textSize="30px" />
            </LinearLayout>

            <GridView
                android:id="@+id/gv_chu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:numColumns="2">

            </GridView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/appbg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9px"
                    android:layout_height="29px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/biaotiqiandise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="彩平"
                    android:textColor="@color/text_black"
                    android:textSize="30px" />
            </LinearLayout>

            <GridView
                android:id="@+id/gv_cai"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:numColumns="2">

            </GridView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/appbg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:background="@color/colorWhite">

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="9px"
            android:layout_height="29px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:src="@mipmap/biaotiqiandise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="说明"
            android:textColor="@color/text_black"
            android:textSize="30px" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:background="@color/colorWhite"
        android:paddingBottom="20px"
        android:paddingLeft="40px"
        android:paddingRight="20px"
        android:paddingTop="20px"
        android:text=""
        android:textSize="30px" />

</LinearLayout>
