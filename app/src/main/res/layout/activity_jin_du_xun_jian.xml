<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxdesign.activity.home.JinDuXunJianActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340px"
        android:background="@mipmap/kaigongjiaodi"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24px"
                android:layout_marginStart="30px"
                android:layout_marginTop="70px">

                <ImageView
                    android:layout_width="29px"
                    android:layout_height="28px"
                    android:src="@mipmap/xiangmumingcheng" />

                <TextView
                    android:id="@+id/tv_xujnian_xiangmuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12px"
                    android:text="中国社会出版社"
                    android:textColor="@color/colorWhite"
                    android:textSize="28px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24px"
                android:layout_marginStart="30px"
                android:layout_marginTop="20px">

                <ImageView
                    android:layout_width="29px"
                    android:layout_height="28px"
                    android:src="@mipmap/dizhi" />

                <TextView
                    android:id="@+id/tv_xunjian_xiangmuaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12px"
                    android:text="北京市朝阳区六里屯19号院"
                    android:textColor="@color/colorWhite"
                    android:textSize="24px" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_jinduxunjian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px" />

</LinearLayout>
