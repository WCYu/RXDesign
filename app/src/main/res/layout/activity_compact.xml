                    android:id="@+id/fire_Control"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColor="@color/colorThe_dark"
                    android:textSize="30px" />
