<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxdesign.activity.home.CompactActivity">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="6px"
                    android:layout_height="28px"
                    android:background="#459fe4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:text="合同信息"
                    android:textColor="#595757"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="@color/timepicker_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingLeft="26px"
                    android:text="付款比例"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/payment_Ratio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:background="@null"
                    android:hint="前选择"
                    android:textColor="@color/colorThe_dark"

                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="@color/timepicker_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingLeft="26px"
                    android:text="合同签订"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/contract_Signing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:background="@null"
                    android:hint="请选择日期"
                    android:textColor="@color/colorThe_dark"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="@color/timepicker_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingLeft="26px"
                    android:text="工期(天)"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/time_limit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:background="@null"
                    android:hint="请输入"
                    android:textColor="@color/colorThe_dark"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="@color/text_greytwo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="6px"
                    android:layout_height="28px"
                    android:background="#459fe4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:text="物业信息"
                    android:textColor="#595757"
                    android:textSize="30px" />
            </LinearLayout>

            <View
