                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:background="@null"
                    android:hint="请输入"
                    android:textColor="@color/colorThe_dark"

                    android:textSize="30px" />
            </LinearLayout>

            <View
