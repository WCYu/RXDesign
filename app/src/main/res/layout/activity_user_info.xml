<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.my.UserInfoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="580px"
        android:background="@drawable/ic_baseinfbg"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300px">

            <ImageView
                android:layout_width="220px"
                android:layout_height="200px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_inficon" />

            <ImageView
                android:id="@+id/ic_icon"
                android:layout_width="160px"
                android:layout_height="140px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="57px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_inficon" />


            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24px"
                android:text="姓名"
                android:textColor="@color/textgreyone"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_trydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14px"
                android:text="试岗日期"
                android:textColor="@color/textgreytwo"
                android:textSize="24px" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/ly_userItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px">

            <LinearLayout
                android:id="@+id/ly_gcid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20px">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="50px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_department" />

                <TextView
                    android:id="@+id/tv_gcid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="南京"
                    android:textSize="28px" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20px">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="50px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_job" />

                <TextView
                    android:id="@+id/tv_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="团队"
                    android:textSize="28px" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_userId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20px">

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_jobnumber" />

                <TextView
                    android:id="@+id/tv_userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="G01113654"
                    android:textSize="28px" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:background="@color/colorwhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="82px">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="25px"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="25px"
                    android:src="@drawable/ic_titlelefticon" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="基本资料"
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3px"
                android:layout_marginLeft="20px"
                android:background="@color/colorline" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:enabled="false"
                    android:text="姓名"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/textView16"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="姓名"
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3px"
                android:layout_marginLeft="20px"
                android:background="@color/colorline" />

            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="性别"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toEndOf="@+id/textView17"
                    android:layout_toRightOf="@+id/textView17"
                    android:text="男"
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3px"
                android:layout_marginLeft="20px"
                android:background="@color/colorline" />

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="电话"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/textView18"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="123"
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="fill_parent"
                android:layout_height="72px"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="邮箱"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/et_email"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/textView30"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3px"
                android:layout_marginLeft="20px"
                android:background="@color/colorline" />

            <RelativeLayout
                android:id="@+id/rl_ismarry"
                android:layout_width="fill_parent"
                android:layout_height="72px"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:text="婚否"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_ismarry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toEndOf="@+id/textView19"
                    android:layout_toRightOf="@+id/textView19"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_identity"
            android:layout_width="fill_parent"
            android:layout_height="72px"
            android:layout_marginTop="20px"
            android:background="@color/colorwhite">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="身份信息"
                android:textColor="@color/textgreyone"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                app:srcCompat="@drawable/ic_go" />

            <TextView
                android:id="@+id/tv_ztwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/imageView16"
                android:layout_toStartOf="@+id/imageView16"
                android:text="上传"
                android:textColor="@color/textblack"
                android:textSize="28px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shenqing"
            android:layout_width="fill_parent"
            android:layout_height="72px"
            android:layout_marginTop="20px"
            android:background="@color/colorwhite">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="申请资料"
                android:textColor="@color/textgreyone"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                app:srcCompat="@drawable/ic_go" />

            <TextView
                android:id="@+id/tv_zthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/imageView17"
                android:layout_toStartOf="@+id/imageView17"
                android:text="上传"
                android:textColor="@color/textblack"
                android:textSize="28px" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/colorred"
            android:gravity="center"
            android:text="加入瑞祥之家"
            android:textColor="@color/colorwhite"
            android:textSize="36px"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
