<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxdesign.activity.home.OrderGetActivity">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginTop="20px"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorwhite"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/appbg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="项目编号"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_projectnum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_projectnum"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="项目名称"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_projectname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_projectname"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="属        性"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_shuxing"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_shuxing"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="类        型"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_type"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="装        修"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_decorate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_decorate"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="量        房"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_lhouse"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_lhouse"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="使        用"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_use"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_use"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="预        算"
                    android:textColor="@color/textblack"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_yumoney"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="@color/textgreyone"
                    android:textSize="28px" />

            </LinearLayout>

            <TextView
                android:id="@+id/v_yumoney"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/line_blue"
                android:enabled="false" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="fill_parent"
            android:layout_height="88px"
            android:layout_weight="1"
            android:background="@color/text_red"
            android:gravity="center"
            android:text="拒 单"
            android:textColor="@color/colorwhite"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="fill_parent"
            android:layout_height="88px"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDes"
            android:gravity="center"
            android:text="接 单"
            android:textColor="@color/colorwhite"
            android:textSize="30px" />
    </LinearLayout>

</LinearLayout>
